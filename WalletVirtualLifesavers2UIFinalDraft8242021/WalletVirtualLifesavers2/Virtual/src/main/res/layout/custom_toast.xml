        android:text="@string/Voice_authenticator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        />

    <TextView android:id="@+id/text10"
        android:text="@string/Optical_scanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        />

